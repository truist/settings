#!/usr/bin/env bash
set -e
set -u
set -o pipefail

trap 'exit 0' SIGINT

# from https://codeberg.org/EvanHahn/dotfiles/src/commit/843b9ee13d949d346a4a73ccee2a99351aed285b/home/bin/bin/pastas

last_value=''

while true
do
  value="$(pbpaste)"

  if [ "$last_value" != "$value" ]; then
    echo "$value"
    last_value="$value"
  fi

  sleep 0.1
done
