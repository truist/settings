#!/usr/bin/env bash
set -e
set -u
set -o pipefail

# from https://codeberg.org/EvanHahn/dotfiles/src/commit/843b9ee13d949d346a4a73ccee2a99351aed285b/home/bin/bin/mksh

if [ ! $# -eq 1 ]; then
	echo "args: <new filename>" >&2
	exit 1
elif [ -e "$1" ]; then
	echo "$1 already exists" 1>&2
	exit 1
fi

echo '#!/usr/bin/env bash
set -e
set -u
set -o pipefail

' > "$1"

chmod +x "$1"

"$EDITOR" "$1"
